<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="ButtonStyleSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="heading">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="mediumText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="radioStyle">
       <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
